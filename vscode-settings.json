// Place your settings in this file to overwrite the default settings
{
  // Editor interaction
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,
  "files.exclude": {
    "**/*.pyc": true,
    "**/bundle.js": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/migrations": true,
    "**/node_modules": true
  },
  "workbench.editor.enablePreview": false,
  "editor.snippetSuggestions": "top",
  "editor.lineNumbers": "off",
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.fontSize": 15,
  "editor.minimap.enabled": false,
  // Theme
  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#388799",
    "editor.selectionHighlightBackground": "#0C4855"
  },
  "workbench.activityBar.visible": false,

  // Languages

  "javascript.validate.enable": false,
  
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=E501,D101,D100"],

  "go.useLanguageServer": true,
  "go.vetOnSave": "off",
  "go.lintTool":"gometalinter",
  "go.lintFlags": [
      "--disable=golint",
      "--disable=vetshadow",
      "--fast"
  ],
  // GitLens
  "gitlens.blame.line.enabled": false,

  "workbench.startupEditor": "newUntitledFile",
  // SYnc
  "sync.gist": "0ebc79fd40df975e8a19263bce8943df",
  "sync.lastUpload": "2017-10-03T22:33:39.669Z",
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.lastDownload": "2017-10-03T22:35:44.944Z",
  "sync.forceDownload": false,
  "sync.anonymousGist": false,
  "sync.host": "",
  "sync.pathPrefix": "",
  "sync.quietSync": false,
  "sync.askGistName": false,
  "window.zoomLevel": 0
}